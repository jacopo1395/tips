<div class="form-card mdl-card mdl-shadow--4dp">

  <div class="mdl-card__title">
    <h2 class="mdl-card__title-text">Password dimenticata?</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <div class="mdl-card__supporting-text">
      <%= devise_error_messages! %>

      <div class="field mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <%= f.label :email, class: "mdl-textfield__label", for: "forgotten-password-email" %>
        <%= f.email_field :email, autofocus: true, id: "forgotten-password-email", class: "mdl-textfield__input" %>
      </div>
    </div>

    <div class="mdl-card__actions">
      <div class="actions">
        <%= f.submit "Reset password", class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored" %>
      </div>
    </div>
  <% end %>

</div>

<br>

<%= render "devise/shared/links" %>
