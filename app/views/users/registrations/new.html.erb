<div class="form-card mdl-card mdl-shadow--4dp">

  <div class="mdl-card__title">
    <h2 class="mdl-card__title-text">Registrazione</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="mdl-card__supporting-text">
      <%= devise_error_messages! %>

      <div class="field mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <%= f.label :username, class: "mdl-textfield__label", for: "signup-username" %>
        <%= f.text_field :username, autofocus: true, id: "signup-username", class: "mdl-textfield__input" %>
      </div>

      <br>

      <div class="field mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <%= f.label :email, class: "mdl-textfield__label", for: "signup-email" %>
        <%= f.email_field :email, id: "signup-email", class: "mdl-textfield__input" %>
      </div>

      <br>

      <div class="field mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <!-- <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %> -->
        <%= f.label :password,
                    class: "mdl-textfield__label",
                    for: "signup-password" %>
        <%= f.password_field :password,
                              autocomplete: "off",
                              id: "signup-password",
                              class: "mdl-textfield__input" %>
      </div>

      <br>

      <div class="field mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <%= f.label :password_confirmation,
                    class: "mdl-textfield__label",
                    for: "signup-password-confirmation" %>
        <%= f.password_field :password_confirmation,
                              autocomplete: "off",
                              id: "signup-password-confirmation",
                              class: "mdl-textfield__input" %>
      </div>
    </div>

    <div class="mdl-card__actions">
      <div class="actions">
        <%= f.submit "Registrati", class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored" %>
      </div>
    </div>
  <% end %>

</div>

<br>

<%= render "devise/shared/links" %>
